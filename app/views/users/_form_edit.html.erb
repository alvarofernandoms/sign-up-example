<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:user_update_error] %>
    <div class="d-block invalid-feedback">
      <h5><%= flash[:user_update_error].first %></h5>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, required: true, minlength: "5" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, required: true, type: "email", disabled: true %>
  </div>

  <div class="field">
    <%= form.label :old_password %>
    <%= form.text_field :old_password, type: "password", minlength: "8" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, type: "password", minlength: "8" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, type: "password", minlength: "8" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
